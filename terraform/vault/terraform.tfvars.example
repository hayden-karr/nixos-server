# Terraform variables for Vault configuration
# This file is gitignored for security

vault_address = "http://domain-here:8300"

# Domain configuration - SINGLE SOURCE OF TRUTH
# These domains are used for:
#   1. Vault secrets (synced to k8s via ESO)
#   2. Authelia config (templated at runtime)
#   3. Immich config (templated at runtime)
#   4. Ingress resource (created by Terraform)
# Just set these values and run: tofu apply
base_domain     = "example.com"
immich_domain   = "immich.example.com"
authelia_domain = "auth.example.com"
admin_email     = "admin@example.com"

# Resend API key (optional - set this if you have it)
# resend_api_key = "re_..."

# OAuth client secret hash for Authelia
# Generate with: echo -n 'your-secret' | authelia crypto hash generate pbkdf2 --variant sha512 --random.length 32
# Or use online tool: docker run --rm authelia/authelia:latest authelia crypto hash generate pbkdf2 --password 'your-secret'
oauth_client_secret_hashed = "hash goes here"
